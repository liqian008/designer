		<ImageView
            android:id="@+id/avatar"
            android:layout_width="106.0dip"
            android:layout_height="106.0dip"
            android:src="@drawable/ic_launcher"
            android:visibility="visible" />

        <!-- <ImageView
            android:id="@+id/weibo_v"
            android:layout_width="19.0dip"
