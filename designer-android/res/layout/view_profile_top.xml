            android:visibility="invisible" /> -->

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="116.0dip"
            android:layout_marginTop="6.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtPhotosNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#ff252525"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="照片"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_grey_bg" />

            <LinearLayout
                android:id="@+id/followFriendsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtFollowsNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#ff252525"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="关注"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_grey_bg" />

            <LinearLayout
                android:id="@+id/fansFriendsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtFollowersNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#ff252525"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="粉丝"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_grey_bg" />

           	<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtZansNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textColor="#ff252525"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="被赞"
                    android:textColor="#ff999999"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_alignBottom="@+id/avatar"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/linearLayout"
            android:background="@drawable/follow_button_bg"
            android:text="关注"
            android:textColor="@color/txt_button_color"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="223.0dip"
            android:layout_height="50.0dip"
            android:layout_alignBottom="@+id/imgAvatar"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/linearLayout"
            android:background="@drawable/edit_profile_button_bg"
            android:text="编辑个人资料"
            android:textColor="#ff252525"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="个人资料描述"
        android:textColor="#ff252525" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffeeeeee" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52.0dip"
        android:layout_marginBottom="3.0dip" >

        <ImageButton
            android:id="@+id/btnTabThumbnail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#00000000"
            android:src="@drawable/tab_icon_thumbnail" />

        <LinearLayout
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="#ffeeeeee" />

        <ImageButton
            android:id="@+id/btnTabExpand"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="#00000000"
            android:src="@drawable/tab_icon_expand" />

    </LinearLayout>

</LinearLayout>