	</bean>
	
	<bean id="slideMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.bruce.designer.dao.mapper.AlbumSlideMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<bean id="messageMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.bruce.designer.dao.mapper.MessageMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean> 
	
	<bean id="accessTokenInfoMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="com.bruce.designer.dao.mapper.AccessTokenInfoMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
