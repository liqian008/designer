<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bruce.designer.dao.mapper.AlbumMapper">

	<resultMap id="CountCacheMap" type="com.bruce.designer.data.CountCacheBean">
	    <result column="user_id" jdbcType="VARCHAR" property="member"/>
	    <result column="albums_num" jdbcType="BIGINT" property="score"/>
    </resultMap>
    
	<!-- 专辑评论数据统计，供重建数据使用 -->
	<select id="queryUserAlbumCount" resultMap="CountCacheMap">
		select user_id, count(id) albums_num from tb_album where status=1 group by user_id;
	</select>
	
</mapper>